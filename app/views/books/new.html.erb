<h1>New book</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-2">
    <%= simple_form_for @book do |f| %>
    <!-- hidden field current user -->
    <%= render 'shared/book_error_messages' %>

    
    <%= f.input :name, label: "Name" %>
    <%= f.association :genre,
      collection: Genre.all,
      include_blank: true,
      input_html: { class: 'chosen-select' }
    %>
    <%= f.association :tags,
      collection: Tag.all,
      include_blank: true,
      input_html: { class: 'chosen-select', multiple: true }
    %>
    <%= f.button :submit, 'Create Book' %>	
    

    <% end %>
  </div>
</div>

