<h1>New Chapter</h1>
<br>

<%= form_for [ @book, @chapter] do |f| %>
<!-- hidden field current user -->
  <%= f.label :name %>  
  <%= f.text_field :name, {:class => "span8"} %>
  <%= f.label :content %> 
  <div > 
  <%= f.text_area :content, { :id => "target-editor-with-custom-language", :class => "md-input", :rows => "5", "data-provide" =>"markdown", :style => { :resize => "none" }} %>
  </div>
  <!-- <textarea id="target-editor-with-custom-language" class="md-input" rows="5" style="resize: none;"></textarea> -->
  <!-- <textarea id="chapter_content" name="content" data-provide="markdown" rows="10"></textarea> -->
  <%= f.submit 'Create Chapter' %> 
  

<% end %>

