<div class="row">
  <div class="col-md-4 col-md-offset-2">
    <h3>Log in</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <%= f.input :email, as: :email, label: "Email" , autofocus: true%>

      <%= f.input :password, as: :password, label: "Password", autocomplete: "off" %>

        <% if devise_mapping.rememberable? -%>
        <%= f.input_field :remember_me, as: :boolean %>
        <%= f.label "Remember me" %>
        <% end -%>

        <div><%= f.button :submit, class: "btn btn-large btn-primary", label: "Log in" %></div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
