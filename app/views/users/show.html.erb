<% provide(:title, @user.name) %>
<p><%= @user.name %></p>
<%= link_to "Create new book", new_book_path %>
<ul>
<% @user.books.each do |book| %>
  
  <li>
    <span>
      <%= link_to book.name, book_path(book) %> 
    </span>
    <% if can? :manage, book %>
      | <span>
        <%= link_to "Edit book", edit_book_path(book) %>
        </span> | <span>
        <%= link_to "Destroy book", book_path(book), method: :delete %>
      </span>
    <% end %>
  </li>
<% end %>
</ul>
